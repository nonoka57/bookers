<h1>Books</h1>

<table>
  <thead>
    <tr>
      <% @books.each do |book| %>
      <th><%= book.title %> </th>
      <th><%= book.body %></th>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr></tr>
    <tb></tb>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
<label for="book_title">Title</label>
<%= f.text_field :title %>
<label for="book_body">Body</label>
<%= f.text_area :body %>
<%= f.submit "Create box" %>
<% end %>